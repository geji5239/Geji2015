<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>双子星系统 &rsaquo; 登录</title>
    <link rel='stylesheet' id='buttons-css' href='~/Content/buttons.min.css' type='text/css' media='all' />
    <link rel='stylesheet' id='login-css' href='~/Content/login.min.css' type='text/css' media='all' />
    <meta name='robots' content='noindex,follow'/>
    <style type='text/css'>
        #login-error {
            border-left: 4px solid #dd3d36;
            background: #fff;
            -webkit-box-shadow: 0 1px 1px 0 rgba(0,0,0,.1);
            box-shadow: 0 1px 1px 0 rgba(0,0,0,.1);
            margin-left: 0;
            padding: 0px;
            padding-left:15px;
            margin: 6px;
            color: #444;
        }
            #login-error li {
            list-style-type:none;
            height:32px;    
            font-size: 14px;
            line-height: 2.4em;
            }
    </style>

</head>
<body class="login login-action-login wp-core-ui  locale-zh-cn">
    <div id="login">
        <h1><img src="~/Content/Images/name.gif"></h1>
        <div id="login-error">@Html.ValidationSummary()
        </div>
        @*<img src="~/Content/Images/logo.png">*@
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
                    {
        <form name="loginform" id="loginform"  method="post">
            <p>
                <label for="user_login">
                    用户名<br />
                    <input type="text" name="UserName" id="user_login" class="input" value="" size="20" />
                </label>
            </p>
            <p>
                <label for="user_pass">
                    密码<br />
                    <input type="password" name="Password" id="user_pass" class="input" value="" size="20" />
                </label>
            </p>
            <p class="forgetmenot"><label for="rememberme"> @Html.CheckBoxFor(m => m.RememberMe) 记住我</label></p>
            <p class="submit">
                <input type="submit" name="wp-submit" id="wp-submit" class="button button-primary button-large" value="登录" />
                <input type="hidden" name="testcookie" value="1" />
            </p>
            <p id="nav">
                <a href="~/Account/ForgetPsw" title="找回密码">忘记密码？</a>
            </p>
        </form>
                     }
        
        @*<div class="errorMsg" id="showMsg">@Html.ValidationSummary()</div>*@
    </div>
