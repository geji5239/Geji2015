@{
    ViewBag.Title = "产品管理";
    Layout = "~/Views/Shared/_Page.cshtml";
}
@model IEnumerable<Panasia.Gemini.Web.Models.org_Company>

    <div style="margin:5px 0;">
        <a href="#" class="easyui-linkbutton" iconcls="icon-reload" plain="true">刷新</a>
        <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true">新增</a>
