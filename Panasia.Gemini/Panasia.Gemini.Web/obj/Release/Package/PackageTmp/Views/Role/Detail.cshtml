@model Panasia.Core.Sys.RoleModel
@using AF.Core
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-dialog" method="post" id="roleDatailForm">
    <div class="edit-panel">
        <div class="padding-5">
            <label class="edit-title">角色：</label>
            <input class="edit-content easyui-validatebox" name="UserName" value="@Model.Name" disabled="disabled" />
        </div>
        <div class="padding-5">
            <label class="edit-title">说明：</label>
            <input class="edit-content easyui-validatebox" name="Email" value="@Model.Description" disabled="disabled" />
        </div>
    </div>
    <div class="btn-dialog">
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-cancel'" onclick="cancel()">取消</a>
    </div>
</form>

