@model Panasia.Core.Sys.RoleModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" id="roleAddForm" class="form-dialog">
    <div class="edit-panel">
        <div class="showMsg"><label id="showMsg"></label></div>
        <div class="padding-5">
            <label class="edit-title">角色名：</label>
            <input class="edit-content easyui-validatebox" name="Name" data-options="missingMessage:'请输入角色名',required:true,validType:'length[1,50]',invalidMessage:'名称不得超过50个字符'" />
        </div>
        <div class="padding-5">
            <label class="edit-title">说明：</label>
            <input class="edit-content easyui-validatebox" name="Description" data-options="required:true,missingMessage:'请输入角色说明'" />
        </div>
    </div>
    <div class="btn-dialog">
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-ok'" onclick="submitAct_DGAppend('roleAddForm', '/Role/Add', 'datagrid')">确定</a>
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-cancel'" onclick="cancel()">取消</a>
    </div>
</form>

