@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Views/Shared/_Page.cshtml";
}

<h2>ViewDetail</h2>
@model Panasia.Gemini.Web.Models.CompanyPageModels.CompanyViewDetailModel
           @if (!string.IsNullOrEmpty(Model.ErrorMessage))
           {
               <div>@Model.ErrorMessage</div> 
           }
           @if (Model.CompanyDetail == null)
           {
               @Model.EmptyDataContent
           }
           else
           {
            <table class="easyui-datagrid"
                   data-options="singleSelect:true,collapsible:true,url:'#',method:'get'" id="datagrid">
                <thead>
                    <tr>
                        <th data-options="field:'Company_ID',width:20">  </th>
                        <th data-options="field:'Company_Name',width:80">公司名称</th>
                        <th data-options="field:'Is_Active',width:20,align:'right'">是否active</th>
                        <th data-options="field:'#',width:20,align:'right'">View</th>
                    </tr>
                </thead>
                <tbody>
                            <tr>
                                <td>@Model.CompanyDetail.Company_ID</td>
                                <td>@Model.CompanyDetail.Company_Name</td>
                                <td>@Model.CompanyDetail.Is_Active</td>
                                @*<td><a href="@Url.Action("ViewDetail", new{autoKey=CompanyItem.Company_ID })"</td>*@
                            </tr>
                </tbody>
            </table>
           }