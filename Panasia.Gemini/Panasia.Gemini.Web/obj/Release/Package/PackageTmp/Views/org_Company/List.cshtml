        <table class="easyui-datagrid"
               data-options="singleSelect:true,collapsible:true,url:'#',method:'get'">
            <thead>
                <tr>
                    <th data-options="field:'Company_ID',width:20">  </th>
                    <th data-options="field:'Company_Name',width:80">公司名称</th>
                    <th data-options="field:'Is_Active',width:20,align:'right'">是否active</th>
                    <th data-options="field:'#',width:50,align:'right'">View</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CompanyList != null && Model.CompanyList.Count > 0)
                {
                    foreach (var CompanyItem in Model.CompanyList)
                    {
                        <tr>
                            <td>@CompanyItem.Company_ID</td>
                            <td>@CompanyItem.Company_Name.ToString()</td>
                            <td>@CompanyItem.Is_Active.ToString()</td>
                            <td><a href="@Url.Action("ViewDetail", new { autoKey = CompanyItem.Company_ID })">View</a></td>
                        </tr>
                    }
                } 
            </tbody>
        </table>
