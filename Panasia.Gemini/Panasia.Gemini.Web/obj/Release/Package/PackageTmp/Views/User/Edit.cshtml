@model Panasia.Core.Sys.UserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using AF.Core

<form class="form-dialog" method="post" id="userEditForm">
    <div class="edit-panel">
            <div class="showMsg"><label id="showMsg"></label></div>
            <input class="input-dialog" name="UserID" value="@Model.UserID" hidden />
            <div class="padding-5">
                <label class="edit-title">用户名：</label>
                <input class="edit-content easyui-validatebox" data-options="required: true" name="UserName" value="@Model.UserName" />
            </div>
            <div class="padding-5">
                <label class="edit-title">邮箱：</label>
                <input class="edit-content easyui-validatebox" name="Email" value="@Model.Email" />
            </div>
            <div class="padding-5">
                <label class="edit-title">姓名：</label>
                <input class="edit-content easyui-validatebox" name="FullName" value="@Model.FullName" />
            </div>
            <input class="edit-content" name="IsValid" value="@Model.IsValid.ToString()" hidden />
        </div>
    <div class="btn-dialog">
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-ok'" onclick="submitAct_DGUpdate('userEditForm', '/User/Update', 'datagrid')">确定</a>
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-cancel'" onclick="cancel()">取消</a>
    </div>
</form>

