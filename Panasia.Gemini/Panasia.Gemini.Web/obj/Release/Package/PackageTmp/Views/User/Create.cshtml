@model Panasia.Core.Auth.UserCreateModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" id="userAddForm" class="form-dialog">
    <div class="edit-panel">
        <div class="showMsg"><label id="showMsg"></label></div>
        <div class="padding-5">
            <label class="edit-title">用户名：</label>
            <input class="edit-content easyui-validatebox" name="UserName" data-options="missingMessage:'请输入用户名',required:true" />
        </div>
        <div class="padding-5">
            <label class="edit-title">邮箱：</label>
            <input class="edit-content easyui-validatebox" name="Email" data-options="required:true,validType:'email',missingMessage:'请输入邮箱',invalidMessage:'请输入正确的邮箱格式'" />
        </div>
        <div class="padding-5">
            <label class="edit-title">姓名：</label>
            <input class="edit-content easyui-validatebox" name="FullName" data-options="required:true,missingMessage:'请输入姓名'" />
        </div>
    </div>
    <div class="btn-dialog">
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-ok'" onclick="submitAct_DGAppend('userAddForm', '/User/Add', 'datagrid')">确定</a>
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-cancel'" onclick="cancel()">取消</a>
    </div>
</form>

