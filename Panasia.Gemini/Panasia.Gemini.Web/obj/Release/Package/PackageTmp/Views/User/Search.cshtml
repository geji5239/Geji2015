@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-dialog" method="post" id="userSearchForm">
    <div class="edit-panel">
        <div class="showMsg"><label id="showMsg"></label></div>
        <div class="padding-5">
            <label class="edit-title">用户名：</label>
            <input class="edit-content easyui-validatebox" name="name" id="name" />
        </div>
        <div class="padding-5">
            <label class="edit-title">状态：</label>
            <div class="select">
                <select id="state" class="query-state easyui-combobox" name="state" panelheight="auto">
                    <option value="false">无效</option>
                    <option value="true">有效</option>
                </select>
            </div>
        </div>
    </div>
    <div class="btn-dialog">
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-ok'" onclick="submitAct_DGReplace('userSearchForm', '/User/Query', 'datagrid')">确定</a>
        <a class="easyui-linkbutton btn-padding" data-options="iconCls:'icon-cancel'" onclick="cancel()">取消</a>
    </div>
</form>

